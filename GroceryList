<textarea onchange="myFunction()" id="addtext"></textarea><br/>
<input type="button" value="Enter" onclick="myFunction()">

<script>
function myFunction() {
	document.getElementById("myInput").value = "";
	//document.getElementById("myInput").rows = 4;
	
	for (i = 0; i<40; i++){
		
		//var checkBox = document.querySelectorAll("input")[i];
		var checkBox = document.querySelectorAll('input[type="checkbox"]')[i];
		var num = document.querySelectorAll('input[type="text"]')[i].value;
		var add = document.getElementById("addtext").value;
		
		if (checkBox.checked == true){
			document.getElementById("myInput").value += checkBox.name;
			document.getElementById("myInput").value += num;
			document.getElementById("myInput").value += checkBox.value;
			document.getElementById("myInput").value += "\n";
			//if (i > 1){
			//	document.getElementById("myInput").rows += 1;
			//}
		} else { 
			//text.style.display = "none";
		}
		//document.getElementById("myInput").value += i;
	}
	document.getElementById("myInput").value += add;
	if (add != ''){
		document.getElementById("myInput").value += "\n";
	}
	document.getElementById("myInput").value += "\n感謝";
	
}
function selectall() {
	document.getElementById("myInput").select();
}
var input = document.getElementById("myInput");
input.addEventListener("keypress", function(event) {
  if (event.key === "Enter") {
    event.preventDefault();
    myFunction();
  }
});
</script>


